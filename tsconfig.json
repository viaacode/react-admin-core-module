{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "declaration": true,
    "jsx": "preserve",
    "noEmit": true,
    "outDir": "dist",
    "allowJs": true,
    "isolatedModules": true,
    "paths": {
      "~core/*": [
        "./src/core/*"
      ],
      "~modules/*": [
        "./src/modules/*"
      ],
      "~generated/*": [
        "./src/generated/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
